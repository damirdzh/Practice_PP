<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE4CC"
    tools:context=".lozhnopenok5">


    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="481dp"
        android:layout_height="233dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003"
        app:srcCompat="@drawable/maxresdefault" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="398dp"
        android:layout_height="460dp"
        android:text="Ядовитый гриб из рода Hypholoma семейства Strophariaceae.
 Шляпка 2—7 см в диаметре, сначала колокольчатая, затем распростёртая, желтоватая, жёлто-бурая, серно-жёлтая, по краю более светлая, в центре более тёмная или красновато-бурая. Мякоть светло-жёлтая или беловатая, очень горькая, с неприятным запахом."
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button23"
        android:layout_width="149dp"
        android:layout_height="64dp"
        android:layout_marginStart="5dp"
        android:background="#00FFFFFF"
        android:onClick="button23"
        android:text="В главное меню"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/button24"
        android:layout_width="149dp"
        android:layout_height="64dp"
        android:layout_marginEnd="5dp"
        android:background="#00FFFFFF"
        android:onClick="button24"
        android:text="Назад"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.959"
        tools:ignore="TextSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>